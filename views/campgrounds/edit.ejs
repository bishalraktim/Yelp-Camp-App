<%- include("../partials/header.ejs") %>

<div class="container">
	<h1 class="newCamp">Edit <%= campground.name %></h1>
	
	<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" id="fixSize" enctype="multipart/form-data">
		<div class="form-group">
			<label for="name">Name</label>
			<input type="text" class="form-control" placeholder="campground's name" 
				   name="campground[name]" value="<%= campground.name %>">
		</div>
		
		<div class="form-group">
			<label for="price">Price</label>
			<input type="number" class="form-control" placeholder="campground's price" 
				   name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
		</div> 

		<div class="form-group">
			<label for="image">Image</label>
			<input type="file" name="campground[image]" accept="image/*">
		</div>
		
		<div class="form-group">
			<label for="description">Description</label>
			<input type="text" class="form-control" placeholder="description" 
					name="campground[description]" value="<%= campground.description %>">
		</div>
		
		<div class="form-group">
			<label for="location">Location</label>
			<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
		</div>
		
		<div class="form-group">
			<button type="submit" class="btn btn-primary btn-md btn-block">Submit</button>
		</div>
		
		<a href="/campgrounds">Go Back</a>
	</form>
</div>

<%- include("../partials/footer.ejs") %>