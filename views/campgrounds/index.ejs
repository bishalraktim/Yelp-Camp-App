<%- include("../partials/header.ejs") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1><span><i class="fas fa-campground"></i></span> Welcome to YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all over the world</p>
			<P>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
			</P>
		</div>
	</header>
	
	<div class ="row">
		<% for(var i=0; i<campgrounds.length; i++){ %>
				<div class="col-sm-6 col-md-3 mb-4" id="fixSize">
					<div class="card text-center">
						<div>
							<img src="<%= campgrounds[i].image %>" class="card-img-top">
						</div>
						<div class="card-body">
							<h5 class="card-title"><%= campgrounds[i].name %></h5>
							 <a href="/campgrounds/<%= campgrounds[i]._id %>" 
								class="btn btn-primary" target="_blank">More Info</a>
						</div>
					</div>
				</div>
		<% } %>
	</div>
	
	<% if(campgrounds.length < 1){ %>
		<h3><%= noMatch %></h3>
	<% } %>
	
</div>

<%- include("../partials/footer.ejs") %>
